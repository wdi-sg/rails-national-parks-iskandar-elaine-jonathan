<h1>ParksgreSQL</h1>

<p>
  <%= link_to "Home", root_path, class: "btn btn-primary"%>
  <%= link_to "New Park", new_park_path, class: "btn btn-success"%>
</p>

<% @parks.each do |park| %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= park.name%></h3>
  </div>
  <div class="panel-body">
    <a href="/parks/<%= park.id %>">
    <%= image_tag(park.picture, size: "100") %>
    <%= link_to "Edit Park", edit_park_path(park.id), class: "btn btn-primary" %>
    <%= link_to "Delete Park", park, method: :delete, class: "btn btn-primary" %>
    </a>
    <br>
  </div>
</div>

<% end %>
